<layout version="0.1.0">
    <catalog_product_view>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <script>magedevgroup/tradein/jquery.fancybox.js</script>
            </action>

            <action method="addItem">
                <type>skin_css</type>
                <stylesheet>magedevgroup/tradein/jquery.fancybox.css</stylesheet>
            </action>
        </reference>

        <reference name="product.info">
            <block type="core/template"
                   name="tradein_button"
                   as="tradein_button"
                   template="magedevgroup/tradein/button.phtml">
            </block>
            <block type="core/template"
                   name="tradein_form"
                   as="tradein_form"
                   template="magedevgroup/tradein/form.phtml">
            </block>
        </reference>
    </catalog_product_view>
</layout>
