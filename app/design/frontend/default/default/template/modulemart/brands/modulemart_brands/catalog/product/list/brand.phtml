<?php if($this->getBrandLogoEnabled()==1):?>
	<?php $brands = $this->getBrandCollection();?>
    <?php if ($brands->count() > 0) :?>
    <div class="box-collateral box-brands box-up-sell">
        <?php foreach ($brands as $brand) : ?>
            <div class="item">
                <a href="<?php echo $brand->getBrandUrl()?>">
                <img width="45" height="45" src="<?php echo Mage::helper('brands/brand')->getFileBaseUrl().$brand->getBrandLogo();?>" />
                    <span class="brand-name"><?php echo $brand->getBrandName();?></span>
                </a>
            </div>
        <?php endforeach; ?>
    </div>
    <?php endif;?>
<?php endif;?>