<?xml version="1.0"?>
<config>
     <tabs>
        <gaugeinteractive_all translate="label">
            <label>Gauge Interactive</label>
            <sort_order>9999</sort_order>
        </gaugeinteractive_all>
     </tabs>
     <sections>
          <fbpixel_options translate="label" module="fbpixel">
               <label>Facebook Pixel</label>
               <tab>gaugeinteractive_all</tab>
               <frontend_type>text</frontend_type>
               <sort_order>1000</sort_order>
               <show_in_default>1</show_in_default>
               <show_in_website>1</show_in_website>
               <show_in_store>1</show_in_store>
               <groups>
                    <value translate="label">
                         <label>Settings</label>
                         <frontend_type>text</frontend_type>
                         <sort_order>1</sort_order>
                         <show_in_default>1</show_in_default>
                         <show_in_website>1</show_in_website>
                         <show_in_store>1</show_in_store>
                         <fields>
                              <facebookpixelactive translate="label">
                                   <label>Enable Facebook Pixel</label>
                                   <frontend_type>select</frontend_type>
                                   <source_model>adminhtml/system_config_source_yesno</source_model>
                                   <sort_order>1</sort_order>
                                   <show_in_default>1</show_in_default>
                                   <show_in_website>1</show_in_website>
                                   <show_in_store>1</show_in_store>
                              </facebookpixelactive>
                              <fbpixel_id>
                                   <label>Facebook Pixel ID</label>
                                   <frontend_type>text</frontend_type>
                                   <sort_order>2</sort_order>
                                   <show_in_default>1</show_in_default>
                                   <show_in_website>1</show_in_website>
                                   <show_in_store>1</show_in_store>
                              </fbpixel_id>
                              <addtocartactive>
                                   <label>Enable Add To Cart Tracking</label>
                                   <frontend_type>select</frontend_type>
                                   <source_model>adminhtml/system_config_source_yesno</source_model>
                                   <sort_order>3</sort_order>
                                   <show_in_default>1</show_in_default>
                                   <show_in_website>1</show_in_website>
                                   <show_in_store>1</show_in_store>
                              </addtocartactive>
                              <iniatecheckoutactive>
                                   <label>Enable Initiate Checkout Tracking</label>
                                   <frontend_type>select</frontend_type>
                                   <source_model>adminhtml/system_config_source_yesno</source_model>
                                   <sort_order>4</sort_order>
                                   <show_in_default>1</show_in_default>
                                   <show_in_website>1</show_in_website>
                                   <show_in_store>1</show_in_store>
                              </iniatecheckoutactive>
                              <purchaseactive>
                                   <label>Enable Purchase Tracking</label>
                                   <frontend_type>select</frontend_type>
                                   <source_model>adminhtml/system_config_source_yesno</source_model>
                                   <sort_order>5</sort_order>
                                   <show_in_default>1</show_in_default>
                                   <show_in_website>1</show_in_website>
                                   <show_in_store>1</show_in_store>
                              </purchaseactive>
                         </fields>
                    </value>
               </groups>
          </fbpixel_options>
     </sections>
</config>
